<odoo>
    <!-- ACTION -->
    <record id="action_vehicle_details" model="ir.actions.act_window">
        <field name="name">Vehicle Details</field>
        <field name="res_model">vehicle.details</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_vehicle_root" name="Vehicles" sequence="10"/>
    <menuitem id="menu_vehicle_details"
              name="Vehicle Details"
              parent="menu_vehicle_root"
              action="action_vehicle_details"
              sequence="20"/>

    <!-- LIST VIEW -->
    <record id="view_vehicle_details_list" model="ir.ui.view">
        <field name="name">vehicle.details.list</field>
        <field name="model">vehicle.details</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="vin_sn"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_vehicle_details_form" model="ir.ui.view">
        <field name="name">vehicle.details.form</field>
        <field name="model">vehicle.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="vin_sn"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
