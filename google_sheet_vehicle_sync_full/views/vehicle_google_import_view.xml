<odoo>
    <!-- Wizard Form View -->
    <record id="view_vehicle_google_import_form" model="ir.ui.view">
        <field name="name">vehicle.google.import.form</field>
        <field name="model">vehicle.google.import</field>
        <field name="arch" type="xml">
            <form string="Import Vehicles">
                <sheet>
                    <group>
                        <field name="uploaded_file" filename="file_name"/>
                        <field name="file_name"/>
                        <field name="use_first_row_as_header"/>
                    </group>
                    <footer>
                        <button name="action_import"
                                string="Import Vehicles"
                                type="object"
                                class="btn-primary"/>

                        <button string="Close"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="vehicle_google_import_action" model="ir.actions.act_window">
        <field name="name">Import Vehicles</field>
        <field name="res_model">vehicle.google.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_vehicle_google_import_form"/>
        <field name="target">new</field>
    </record>
</odoo>
