<odoo>

    <record id="view_kpi_parts_report_list" model="ir.ui.view">
        <field name="name">kpi.parts.report.list</field>
        <field name="model">kpi.parts.report</field>
        <field name="arch" type="xml">
            <list string="KPI Parts Report" create="false" edit="false">
                <header>
                    <button name="action_print_pdf"
                            string="PDF"
                            type="object"
                            class="btn-primary"/>

                    <button name="action_print_xlsx"
                            string="XLSX"
                            type="object"
                            class="btn-secondary"/>
                </header>
                <field name="sn"/>
                <field name="car_id"/>
                <field name="vin_sn"/>
                <field name="department_id"/>
                <field name="epr_id"/>
                <field name="employee_id"/>
                <field name="request_date"/>
                <field name="part_type"/>
                <field name="product_id"/>
                <field name="parts_price"/>
                <field name="requested_qty"/>
                <field name="received_qty"/>
                <field name="analytic_account_id"/>
                <field name="po_number"/>
                <field name="po_date"/>
                <field name="vendor_id"/>
                <field name="received_date"/>
                <field name="days_to_received"/>
                <field name="issue_date"/>
                <field name="total_parts_received_percentage" widget="percentage"/>
                <field name="total_parts_issued_percentage" widget="percentage"/>
                <field name="total_parts_available"/>
                <field name="utilization_percentage"  widget="percentage"/>

            </list>
        </field>
    </record>


    <record id="view_kpi_parts_report_search" model="ir.ui.view">
        <field name="name">kpi.parts.report.search</field>
        <field name="model">kpi.parts.report</field>
        <field name="arch" type="xml">
            <search string="Search KPI Parts Report">

                <!-- ðŸ”¹ Quick Search Fields -->
                <field name="epr_id"/>
                <field name="car_id"/>
                <field name="product_id"/>
                <field name="vendor_id"/>
                <field name="department_id"/>

                <!-- ðŸ”¹ Filters -->
                <filter string="With Requisition"
                        name="filter_epr"
                        domain="[('epr_id','!=',False)]"/>

                <!-- ðŸ”¹ Group By -->

            </search>
        </field>
    </record>


    <record id="action_kpi_parts_report" model="ir.actions.act_window">
        <field name="name">KPI Parts Report</field>
        <field name="res_model">kpi.parts.report</field>
        <field name="view_mode">list</field>
    </record>


    <record id="action_kpi_parts_detailed_wizard" model="ir.actions.act_window">
        <field name="name">Detailed KPI Report</field>
        <field name="res_model">kpi.parts.detailed.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_kpi_root"
              name="KPI Reports"
              sequence="50"/>

    <menuitem id="menu_kpi_parts_report"
              name="Parts KPI Report"
              parent="menu_kpi_root"
              action="action_kpi_parts_report"/>


    <menuitem id="menu_kpi_parts_detailed_report"
          name="Detailed KPI Report"
          parent="menu_kpi_root"
          action="action_kpi_parts_detailed_wizard"
          sequence="20"/>

</odoo>
