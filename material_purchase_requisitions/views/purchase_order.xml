<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_purchase_order_form_inherit_rfq" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.rfq</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="vehicle_id" invisible="1"/>
                <field name="car_id"/>
                <field name="vehicle_name"/>
                <field name="vin_sn"/>
                <field name="custom_requisition_id"/>
<!--                <field name="material_requisition_id"/>-->
            </xpath>
              <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="before">
            <field name="part_type"/>
            <field name="part_no"/>

<!--             <field name="image" widget="image" class="oe_avatar"/>-->

        </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="before">
                <field name="analytic_account_id"/>


            </xpath>


            <xpath expr="//header" position="inside">
                <button name="action_send_whatsapp_pdf"
                        type="object"
                        string="Send via WhatsApp"
                        icon="fa-whatsapp"
                        class="btn-success"/>
            </xpath>
        </field>
    </record>


    <record id="purchase_order_search_inherit_car_fields" model="ir.ui.view">
        <field name="name">purchase.order.search.inherit.car.fields</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">

            <!-- Add search fields after PO name -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="car_id"/>
                <field name="vehicle_name"/>
                <field name="vin_sn"/>

            </xpath>

        </field>
    </record>



    <record id="view_purchase_order_tree_inherit_car_fields" model="ir.ui.view">
        <field name="name">purchase.order.tree.inherit.car.fields</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">

            <!-- Insert after vendor -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="car_id"/>
                <field name="vehicle_name"/>
                <field name="vin_sn"/>


            </xpath>

        </field>
    </record>




</odoo>