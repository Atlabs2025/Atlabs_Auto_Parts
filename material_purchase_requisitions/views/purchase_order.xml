<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_purchase_order_form_inherit_rfq" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.rfq</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="vehicle_id" invisible="1"/>
                <field name="vehicle_name"/>
                <field name="vin_sn"/>
            </xpath>
              <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="before">
            <field name="part_type"/>
            <field name="part_no"/>
<!--             <field name="image" widget="image" class="oe_avatar"/>-->

        </xpath>


            <xpath expr="//header" position="inside">
                <button name="action_send_whatsapp_pdf"
                        type="object"
                        string="Send via WhatsApp"
                        icon="fa-whatsapp"
                        class="btn-success"/>
            </xpath>
        </field>
    </record>

</odoo>