<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="internal_requisition_stock_form_view" model="ir.ui.view">
            <field name="name">stock.picking.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="custom_requisition_id"/>
                </xpath>
                 <xpath expr="//field[@name='partner_id']" position="after">
                     <field name="employee_id" invisible="1"/>
                     <field name="taken_by"/>
                    <field name="department_id"/>
                    <field name="car_id"/>
                    <field name="vehicle_name"/>
                    <field name="vin_sn"/>
                 </xpath>
<!--new field added for stock-->
                <xpath expr="//field[@name='move_ids_without_package']/list/field[@name='description_picking']" position="after">
                <field name="available_qty" readonly="1"/>
            </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/list/field[@name='product_uom']" position="after">
                <field name="part_location"/>

            </xpath>


            </field>
        </record>


        <record id="inherit_move_line_tree_with_car" model="ir.ui.view">
            <field name="name">stock.move.line.list.inherit.car</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">

                <!-- Insert car_id after product_id -->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="car_id" optional="show"/>
                </xpath>

            </field>
        </record>


        <record id="view_move_line_form_inherit_car" model="ir.ui.view">
            <field name="name">stock.move.line.form.inherit.car</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>

            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="car_id"/>
                </xpath>
            </field>
        </record>


        <!--        action="action_stock_analysis_wizard"-->


        <record id="action_stock_analysis_wizard" model="ir.actions.act_window">
            <field name="name">Stock Analysis</field>
            <field name="res_model">stock.analysis.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- just pass uid to Python for processing -->
        </record>

        <menuitem id="stock.menu_stock_analysis_root" name="Stock Analysis" parent="stock.menu_stock_root" sequence="101"/>

        <menuitem id="stock.menu_stock_analysis_report" name="Stock Analysis Report" parent="stock.menu_stock_analysis_root" action="action_stock_analysis_wizard" sequence="1"/>





    </data>
</odoo>
